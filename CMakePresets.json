{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "ninja-generator",
            "hidden": true,
            "generator": "Ninja"
        },
        {
            "name": "x86",
            "hidden": true,
            "architecture": {
                "value": "x86",
                "strategy": "external"
            }
        },
        {
            "name": "x64",
            "hidden": true,
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "build_options",
            "hidden": true,
            "binaryDir": "${sourceDir}/build-${presetName}",
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "false",
                "BUILD_EXAMPLES": "false",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            }
        },
        {
            "name": "windows",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "unix",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "x64-rel-win",
            "inherits": [
                "ninja-generator",
                "x64",
                "build_options",
                "release",
                "windows"
            ]
        },
        {
            "name": "x64-deb-win",
            "inherits": [
                "ninja-generator",
                "x64",
                "build_options",
                "debug",
                "windows"
            ]
        },
        {
            "name": "x86-rel-win",
            "inherits": [
                "ninja-generator",
                "x86",
                "build_options",
                "release",
                "windows"
            ]
        },
        {
            "name": "x86-deb-win",
            "inherits": [
                "ninja-generator",
                "x86",
                "build_options",
                "debug",
                "windows"
            ]
        },
        {
            "name": "x64-rel-unix",
            "inherits": [
                "ninja-generator",
                "x64",
                "build_options",
                "release",
                "unix"
            ]
        },
        {
            "name": "x64-deb-unix",
            "inherits": [
                "ninja-generator",
                "x64",
                "build_options",
                "debug",
                "unix"
            ]
        },
        {
            "name": "x86-rel-unix",
            "inherits": [
                "ninja-generator",
                "x86",
                "build_options",
                "release",
                "unix"
            ]
        },
        {
            "name": "x86-deb-unix",
            "inherits": [
                "ninja-generator",
                "x86",
                "build_options",
                "debug",
                "unix"
            ]
        }
    ]
}
